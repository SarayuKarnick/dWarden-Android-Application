<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="Blood Group   :  "
        android:id="@+id/textDonorSearch"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/spinnerDonorSearch"
        android:layout_alignTop="@+id/textDonorSearch"
        android:layout_toRightOf="@+id/textDonorSearch"
        android:textColor="#000"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDonorSearch"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_alignTop="@+id/textDonorSearch"
        android:layout_toRightOf="@+id/spinnerDonorSearch"
        android:layout_toEndOf="@+id/spinnerDonorSearch" />
</RelativeLayout>