<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/signUpForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50dp">
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editRollNo"
                    android:hint="Roll Number"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:textColor="#fff"
                    android:inputType="number|numberPassword|phone"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editName"
                    android:maxLines="1"
                    android:hint="Name"
                    android:textColor="#fff"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp" >
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editEmail"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:maxLines="1"
                    android:textColor="#fff"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editBranch"
                    android:maxLines="1"
                    android:hint="Branch"
                    android:textColor="#fff"/>
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="324dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:text="Year       :  "
                    android:id="@+id/textYear"
                    android:layout_alignParentLeft="true" />

                <Spinner
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerYear"
                    android:layout_alignTop="@+id/textYear"
                    android:layout_toRightOf="@+id/textYear"
                    android:textColor="#fff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="324dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:text="Hostel   :  "
                    android:id="@+id/textHostel"
                    android:layout_alignParentLeft="true" />

                <Spinner
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerHostel"
                    android:layout_alignTop="@+id/textHostel"
                    android:layout_toRightOf="@+id/textHostel"
                    android:textColor="#fff"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="324dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingTop="10dp"
                    android:textSize="18sp"
                    android:text="Blood Group   :  "
                    android:id="@+id/textBlood"
                    android:layout_alignParentLeft="true" />

                <Spinner
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerBlood"
                    android:layout_alignTop="@+id/textBlood"
                    android:layout_toRightOf="@+id/textBlood"
                    android:textColor="#fff"/>
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editPercentage"
                    android:hint="Percentage(Last Session)"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:textColor="#fff"
                    android:inputType="number|numberPassword|phone"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editPassword"
                    android:inputType="textPassword"
                    android:hint="Password(min 6 characters)"
                    android:maxLines="1"
                    android:textColor="#fff"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editConfirmPassword"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"
                    android:maxLines="1"
                    android:textColor="#fff"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                style="?android:textAppearanceSmall"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="10dp"
                android:text="Register"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:textAllCaps="false"
                android:background="#128678"
                android:textColor="#fff"
                android:id="@+id/buttonRegister" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>